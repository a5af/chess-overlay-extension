{
  "manifest_version": 3,
  "name": "SquareWatch",
  "version": "0.1.0",
  "description": "Real-time board control visualization for chess.com and lichess.org",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "https://www.chess.com/*",
    "https://lichess.org/*"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.chess.com/*",
        "https://lichess.org/*"
      ],
      "js": ["src/content.tsx"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Toggle SquareWatch Overlay",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
