{
  "manifest_version": 3,
  "name": "Chess Overlay Extension",
  "version": "2.0.0",
  "description": "Real-time threat overlay for chess.com and lichess.org boards",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.chess.com/*",
    "https://lichess.org/*"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/content.tsx-loader-BAaYnftb.js"
      ],
      "matches": [
        "https://www.chess.com/*",
        "https://lichess.org/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Toggle Chess Overlay",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "matches": [
        "https://lichess.org/*",
        "https://www.chess.com/*"
      ],
      "resources": [
        "assets/content.tsx-WmhBMuoQ.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
